<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">

        <item name="colorPrimary">@color/color_grey_50</item>
        <item name="colorPrimaryDark">@color/color_grey_50_dark</item>
        <item name="colorPrimaryVariant">@color/color_grey_50_light</item>
        <item name="colorOnPrimary">@color/color_black</item>

        <item name="colorSecondary">@color/color_grey_800</item>
        <item name="colorSecondaryVariant">@color/color_grey_800_light</item>
        <item name="colorOnSecondary">@color/color_white</item>

        <color name="colorSurface">@color/color_white</color>
        <color name="colorOnSurface">@color/color_black</color>

        <color name="android:colorBackground">@color/color_white</color>
        <color name="colorOnBackground">@color/color_black</color>

        <color name="colorError">@color/color_orange_300</color>
        <color name="colorOnError">@color/color_black</color>
    </style>

</resources>